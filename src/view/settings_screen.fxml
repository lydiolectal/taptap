<!--This is the Settings page, which has a back button so the user can return to their game in case they got to the settings page by pausing it,  plus options for the user to start a new game instead. Its background is slightly transparent, so that the main page can show through a little underneaths-->

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane opacity="0.85" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #000;" visible="false" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <ChoiceBox prefWidth="150.0" style="-fx-background-color: #0298D3;">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin></ChoiceBox>
                  <ChoiceBox prefWidth="150.0" style="-fx-background-color: #0298D3;" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="backButton" mnemonicParsing="false" style="-fx-background-color: #D40E52;" text="Back" textFill="WHITE">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="startButton" mnemonicParsing="false" style="-fx-background-color: #D40E52;" text="Start Game!" textFill="WHITE" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
